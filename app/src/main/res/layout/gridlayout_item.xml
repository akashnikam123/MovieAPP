<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#DDC9C9"
    android:orientation="horizontal"
    android:padding="4dp"
    android:paddingStart="10dp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.9"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_img_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/login_logo"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textSize="16sp">

            <TextView
                android:id="@+id/user_id_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user ID" />

            <TextView
                android:id="@+id/user_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_email_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user eMAIL"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_mobile_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user MObile"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>