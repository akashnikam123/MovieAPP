<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#D1A4A4"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/fragment2_item_moviePoster"
            android:layout_width="100dp"
            android:layout_marginEnd="10dp"
            android:layout_height="100dp"></ImageView>

        <TextView
            android:id="@+id/fragment2_item_movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/fragment2_item_constraintLayout"
            android:layout_toRightOf="@+id/fragment2_item_moviePoster"
            android:text="Movie Title"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fragment2_item_movieYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment2_item_movieTitle"
            android:layout_toRightOf="@+id/fragment2_item_moviePoster"
            android:text="Movie Year"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fragment2_item_movieGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment2_item_movieYear"
            android:layout_toRightOf="@+id/fragment2_item_moviePoster"
            android:text="Genre"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fragment2_item_movieDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment2_item_movieGenre"
            android:layout_toRightOf="@+id/fragment2_item_moviePoster"
            android:text="Director"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment2_item_constraintLayout"
            android:layout_width="40dp"
            android:padding="5dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/fragment2_item_movieFav"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_nonfav"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</LinearLayout>